  <%- include('../partials/js.ejs') %>

  <script>
    $('#reimbursementTable').on('click', '#btn-reimbursement-update', function() {
      const uuid = $(this).data('uuid');
      const total = $(this).data('total');
      const dokumen = $(this).data('dokumen');
      const assignment_id = $(this).data('assignment_id');
      const status_id = $(this).data('status_id');
      console.log(status_id);
      $('#update-reimbursement-modal').modal('show');

      $('.uuid').val(uuid);
      $('.total').val(total);
      $('.dokumen').val(dokumen);
      $('.assignment_id').val(assignment_id);
      $('.status_id').val(status_id);
    })
  </script>

